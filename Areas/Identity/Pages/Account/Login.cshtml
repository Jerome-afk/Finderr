@page
@model LoginModel
@{
    ViewData["Title"] = "Welcome Back";
    Layout = "/Pages/Shared/_AuthLayout.cshtml";
}

<div class="min-h-screen flex flex-row-reverse">
    <!-- Form Section (Right) -->
    <div class="w-1/2 p-12 flex items-center justify-center">
        <div class="w-full max-w-md form-container p-10 rounded-xl shadow-2xl">
            <h2 class="text-3xl font-bold text-blue-900 mb-6">Welcome Back</h2>

            <form id="account" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-500"></div>

                <div>
                    <label asp-for="Input.Email" class="block text-sm font-medium text-blue-800"></label>
                    <input asp-for="Input.Email" autocomplete="username" class="mt-1 p-3 w-full border border-blue-200 rounded-lg focus:ring-2 focus:ring-blue-500">
                    <span asp-validation-for="Input.Email" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Input.Password" class="block text-sm font-medium text-blue-800"></label>
                    <input asp-for="Input.Password" autocomplete="current-password" class="mt-1 p-3 w-full border border-blue-200 rounded-lg focus:ring-2 focus:ring-blue-500">
                    <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input asp-for="Input.RememberMe" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                        <label asp-for="Input.RememberMe" class="ml-2 block text-sm text-blue-800">
                            Remember me
                        </label>
                    </div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-sm text-blue-600 hover:text-blue-800">
                        Forgot password?
                    </a>
                </div>

                <button type="submit" class="w-full bg-blue-600 text-white p-3 rounded-lg hover:bg-blue-700 transition duration-300 shadow-lg">
                    Sign In
                </button>
            </form>

            <div class="mt-6 text-center">
                <p class="text-blue-800">
                    New to Media Manager?
                    <a asp-page="./Register" class="font-semibold text-blue-600 hover:text-blue-800">Create Account</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Image Section (Left) -->
    <div class="w-1/2 auth-bg flex items-center justify-center">
        <div class="text-center p-12 text-white">
            <img src="https://illustrations.popsy.co/amber/reading-book.svg" alt="Media Illustration" class="w-3/4 mx-auto mb-8">
            <h3 class="text-3xl font-bold mb-4">Your Media Awaits</h3>
            <p class="text-xl opacity-90">Access your personalized media collection anywhere</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}